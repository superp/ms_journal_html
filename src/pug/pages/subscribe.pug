extends ../_layout

block container
  section.about_page
    .section_wrapper
      .left_content
        .page_navigation.sticky
          ul
            li
              a(href="javascript:void(0)") subscribe and access forms
            li
              a(href="javascript:void(0)") answers to questions

      .main_content
        .tab_content.subscribe
          .tabs
            ul
              li
                a.active(href="#tab-1") subscribe to journal
              li
                a(href="#tab-2") buy online access
              li
                a(href="#tab-3") Buy printed edition
          .tab_item#tab-1
            form
              .form_content
                .form_block.form_block__of_three
                  .form_item
                    label Term
                    select
                      -for(i = 0; i < 17; i++)
                        option(value="") #{i} year (12 issues)
                  .form_item
                    label Price Type
                    select
                      -for(j = 0; j < 7; j++)
                        option(value="") Individual
                  .form_item
                    label Region
                    select
                      -for(k = 0; k < 7; k++)
                        option(value="") #{i} Ukraine
                p.subscribe_info
                  span.icon.icon__done
                  | Full online access for the selected period

              .form_content
                .delivery_address Enter your delivery address
                .delivery_block(style="display:none;")
                  .form_block.form_block__of_three
                    .form_item
                      label Your name
                      input(type="text")
                    .form_item
                      label Your last name
                      input(type="text")
                    .form_item
                      label country
                      input(type="text")

                  .form_block.form_block__of_three.form_block__address
                    .form_item
                      label city
                      input(type="text")
                    .form_item
                      label index
                      input(type="text")
                    .form_item
                      label address
                      input(type="text")

                  .subscribe_panel
              
              .payment_panel
                .payments
                  .payments_item
                    img(src="assets/images/visa.svg", alt="")
                  .payments_item
                    img(src="assets/images/mastercard.svg", alt="")
                  span Payment by bank card VISA / MasterCard
                .payment_price
                  p $ 1000
                  button.button.button_brown  SUBSCRIBE

          .tab_item#tab-2(style="display:none;")
            form
              .form_submit
                .buy_item
                  .buy_item_info
                    .buy_article
                      a(href="javascript:void(0)").delete
                        .span.icon.icon__close
                      .buy_article_image(style="background-image:url(./assets/images/issues/1.jpg)")
                      .buy_article_info
                        span Vol. 2, Issue 4, Pages 43–50
                        p Multilocular Type of Mandibular Simple Bone Cyst. Part 1: Cone Beam Computed Tomography (CBCT) Findings, Revision of the Synonyms and Treatment Strategies

                  .buy_item_access
                    p Open access forever
                  .buy_item_price
                    | $ 10
                  .buy_item_button
                    button.button.button_brown.disabled
